@namespace AasxServerBlazor.Pages.TreeNodeComponents

<div class="node-element-container" id="time-series-image-component">
    <div class="time-series-image">
        <img @onclick="ToggleModal" src="data:image;base64,@ImageBase64" alt="Visualization of time series"/>
        <span class="time-series-info">Image processing took @ElapsedMsToProcessImage ms (Last update: @TimeStampPlot.ToString(TimeFormat))</span>
    </div>

    <div class="modal modal-fullscreen @(ShowModal ? "d-block" : "d-none")">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Visualization of time series</h5>
                    <button type="button" @onclick="ToggleModal" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <img @onclick="ToggleModal" src="data:image;base64,@ImageBase64" alt="Visualization of time series" class="modal-image"/>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string ImageBase64 { get; set; }
    [Parameter] public bool ShowModal { get; set; }
    [Parameter] public DateTime TimeStampPlot { get; set; }
    [Parameter] public long ElapsedMsToProcessImage { get; set; }

    private const string TimeFormat = "yy-MM-dd HH:mm:ss.fff";

    private void ToggleModal()
    {
        ShowModal = !ShowModal;
    }

}